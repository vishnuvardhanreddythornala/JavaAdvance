<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- MessageService Bean -->
    <bean id="msgSrv" class="Xml.MessageService">
        <property name="emailservice" ref="emlSrv"/>
    </bean>

    <!-- EmailService Bean -->
    <bean id="emlSrv" class="Xml.EmailService" scope = "prototype" init-method="init" destroy-method="destroy"/>
</beans>